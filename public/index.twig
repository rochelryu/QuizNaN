    <link rel="stylesheet" href="../Assets/Css/style.css">
    <title>{{ user.pseudo|capitalize }}</title>
    <script src="../Assets/Js/instascan.min.js"></script>
  </head>
  <body>
    <input type="hidden" id="del" value="{{user.emailcrypt}}" disabled/>
  <div class="quiz-container">
    <div class="levelQ"> <div id="adent" class="absContent" style="right: {{ 100 - ((info.niveauActuel + 1) * 100) / info.niveauTotal  }}%"><p>{{ info.niveauActuel + 1 }}/{{ info.niveauTotal }}</p></div> </div>
    <div class="lem"><p>{{ info.timesQues }}</p></div>
    <div class="question box">
      <p> <span>{{ info.niveauActuel + 1 }}.</span> {{ info.Ques[info.niveauActuel].content }} {% if info.Ques[info.niveauActuel].files != null %} <br> <img src="Assets/images/quiz/{{ info.Ques[info.niveauActuel].files }}" class="img-fluid img-perso" /> {% endif %}
      {{ info.Ques[info.niveauActuel].files }} </p>
    </div>
      
    <ul class="answers">
    {% for item in info.Ques[info.niveauActuel].responses %}
      <li class="answer box {{ (item.choice == 1) ? 'active' : ''}}" data-ryu-choice="{{ item.crypt }}">
        <p> <span> {% if loop.index == 1 %} a {% elseif loop.index == 2 %} b {% elseif loop.index == 3 %} c {% elseif loop.index == 4 %} d {% elseif loop.index == 5 %} e {% elseif loop.index == 6 %} f {% elseif loop.index == 7 %} g {% endif %}</span> {{ item.content }} </p>
        {% if item.choice == 1 %} <span class="checkmark">&#x2713;</span> {% endif %}
        </li>
   {% endfor %}
    </ul>
    <button class="box Send"> Suivant
      <span> &#x203A;</span>
    </button>
  </div>

  <div class="footer">
